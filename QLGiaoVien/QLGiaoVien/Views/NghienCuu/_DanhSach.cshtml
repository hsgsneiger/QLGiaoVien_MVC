@model List<DAO.ResearchView>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Hướng dẫn</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên công trình khoa học</th>
                            <th>Loại</th>
                            <th>Vai trò</th>
                            <th>Số tác giả</th>
                            <th>Giờ chuẩn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="bg-gray-500 font-weight-bold">
                                    <td>@(i + 1)</td>
                                    <td colspan="3">@Model[i].TenNhomNCKH</td>
                                    <td>@Model[i].TongSoGio</td>
                                </tr>
                                for (int j = 0; j < Model[i].ChiTiet.Count; j++)
                                {
                                    <tr>
                                        <td class="pl-5">@(j + 1)</td>
                                        <td>@Model[i].ChiTiet[j].TenDeTai</td>
                                        <td>@Model[i].ChiTiet[j].TenLoai</td>
                                        <td>@Model[i].ChiTiet[j].TenVaiTro</td>
                                        <td>@Model[i].ChiTiet[j].SoTacGia</td>
                                        <td>@(Model[i].ChiTiet[j].SoGioChuan.ToString("N2"))</td>
                                    </tr>
                                }
                            }
                            <tr class="bg-gray-500 font-weight-bold">
                                <td colspan="3">Tổng số</td>
                                <td>@Model.Sum(x=>x.TongSoGio)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
