@model List<DAO.GuideView>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Hướng dẫn</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ tên học viên</th>
                            <th>Lớp</th>
                            <th>Hệ</th>
                            <th>Tên đề tài / Chuyên đề</th>
                            <th>Định mức</th>
                            <th>Số CBHĐ</th>
                            <th>Số giờ</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="bg-gray-500 font-weight-bold">
                                    <td>@(i + 1)</td>
                                    <td colspan="4">@Model[i].TenLoaiHuongDan</td>
                                    <td>@Model[i].SoGioDinhMuc</td>
                                    <td></td>
                                    <td>@Model[i].TongSoGio.ToString("N0")</td>
                                </tr>
                                for (int j = 0; j < Model[i].ChiTiet.Count; j++)
                                {
                                    <tr>
                                        <td class="pl-5">@(j + 1)</td>
                                        <td>@Model[i].ChiTiet[j].HoTenHocVien</td>
                                        <td>@Model[i].ChiTiet[j].Lop</td>
                                        <td>@Model[i].ChiTiet[j].TenHeHuongDan</td>
                                        <td>@Model[i].ChiTiet[j].TenDeTai_ChuyenDe</td>
                                        <td></td>
                                        <td>@Model[i].ChiTiet[j].SoCBHD</td>
                                        <td>@Model[i].ChiTiet[j].SoGio.ToString("N0")</td>
                                    </tr>
                                }
                            }
                            <tr class="bg-gray-500 font-weight-bold">
                                <td colspan="7">Tổng số</td>
                                <td>@Model.Sum(x => x.TongSoGio).ToString("N0")</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

