@model List<DAO.GuideView>

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 row">
            <h6 class="m-0 font-weight-bold text-primary col-10">Hướng dẫn</h6>
            <button type="button" class="col-2 btn btn-primary" onclick="Features.doPost('/HuongDan/_ChiTiet', {}, false, 'modal-body');Features.isUpdate=false" data-toggle="modal" data-target="#exampleModal">
                Thêm mới
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ tên học viên</th>
                            <th>Lớp</th>
                            <th>Hệ</th>
                            <th>Tên đề tài / Chuyên đề</th>
                            <th>Định mức</th>
                            <th>Số CBHĐ</th>
                            <th>Số giờ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="bg-gray-500 font-weight-bold">
                                    <td>@(i + 1)</td>
                                    <td colspan="4">@Model[i].TenLoaiHuongDan</td>
                                    <td>@Model[i].SoGioDinhMuc</td>
                                    <td></td>
                                    <td colspan="2">@Model[i].TongSoGio.ToString("N0")</td>
                                </tr>
                                for (int j = 0; j < Model[i].ChiTiet.Count; j++)
                                {
                                    <tr>
                                        <td class="pl-5">@(j + 1)</td>
                                        <td>@Model[i].ChiTiet[j].HoTenHocVien</td>
                                        <td>@Model[i].ChiTiet[j].Lop</td>
                                        <td>@Model[i].ChiTiet[j].TenHeHuongDan</td>
                                        <td>@Model[i].ChiTiet[j].TenDeTai_ChuyenDe</td>
                                        <td></td>
                                        <td>@Model[i].ChiTiet[j].SoCBHD</td>
                                        <td>@Model[i].ChiTiet[j].SoGio.ToString("N0")</td>
                                        <td><i  data-toggle="modal" data-target="#exampleModal" onclick="Features.doPost('/HuongDan/_ChiTiet', {'ID':@Model[i].ChiTiet[j].id}, false, 'modal-body');Features.isUpdate=true" class="fas fa-edit"></i> / <i onclick="Features.Delete('/Ajax/HuongDan_Xoa', {'ID':@Model[i].ChiTiet[j].id})" class="fas fa-trash"></i></td>
                                    </tr>
                                }
                            }
                            <tr class="bg-gray-500 font-weight-bold">
                                <td colspan="7">Tổng số</td>
                                <td>@Model.Sum(x => x.TongSoGio).ToString("N0")</td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Hướng Dẫn</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="saveChanges()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script>
    function saveChanges() {
        const obj = Features.getValueFromModal();
        if(!obj) return;
         obj.MaGV = +$("#GV").val();
         obj.MaNamHoc = +$("#Nam").val();
         obj.id = +obj.id;
         obj.SoCBHD = +obj.SoCBHD;
         obj.LoaiHuongDan_id = +obj.LoaiHuongDan_id;
         obj.HeHuongDan_id = +obj.HeHuongDan_id;
         Features.doPost("/Ajax/HuongDan_ThemSua", { obj: obj ,isUpdate:Features.isUpdate}, true);
    }
</script>